{
    "name": "root",
    "private": true,
    "engines": {
        "node": ">=10.13.0",
        "yarn": "^1.12.3"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "plugnet-dev-build-ts",
        "test": "jest -c ./jest/jest.config.js --coverage spec",
        "test:e2e": "jest --silent --forceExit --runInBand -c ./jest/jest.config.js --coverage e2e -- wss://cennznet-node-0.centrality.me:9944",
        "test:e2eDebug": "node --inspect-brk ./node_modules/.bin/jest --forceExit --runInBand -c ./jest/jest.config.js e2e -- wss://cennznet-node-0.centrality.me:9944",
        "test:e2eLocal": "jest --forceExit --runInBand -c ./jest/jest.config.js --coverage e2e -- ws://127.0.0.1:9944",
        "make-docs": "typedoc --options typedoc.config.js .",
        "metadata-docs": "node ./scripts/MetadataMdWrapper.js",
        "lint": "npx tslint -c tslint.json --project . && npx prettier --list-different './packages/**/src/*.ts'"
    },
    "devDependencies": {
        "@plugnet/dev": "^0.30.5",
        "@types/jest": "^23.3.10",
        "cz-lerna-changelog": "^2.0.2",
        "husky": "^1.1.1",
        "jest": "24.1.0",
        "jest-environment-node": "^24.0.0",
        "lerna": "^3.13.1",
        "prettier": "^1.13.5",
        "ts-jest": "^24.0.0",
        "ts-node": "^8.0.3",
        "tsconfig-paths": "^3.8.0",
        "tslint": "^5.14.0",
        "tslint-microsoft-contrib": "^5.2.1",
        "typedoc": "^0.14.2",
        "typedoc-plugin-monorepo": "https://github.com/ianhe8x/typedoc-plugin-monorepo"
    },
    "resolutions": {
        "braces": "^2.3.2",
        "fstream": "^1.0.12",
        "handlebars": "^4.1.2",
        "js-yaml": "^3.13.1",
        "marked": "^0.6.2",
        "tar": "^4.4.8"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "prettier --write 'packages/**/src/**/*'"
        }
    }
}
